<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--  The dark theme: Matrix  -->
    <style name="Matrix" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/matrix_color_accent</item>
        <item name="colorPrimary">@color/matrix_color_accent</item>
        <item name="colorAccent">@color/matrix_color_accent</item>
        <item name="android:textColor">@color/matrix_text_color</item>
        <item name="android:windowBackground">@color/matrix_color_primary</item>
        <item name="android:buttonTint">@color/matrix_text_color</item>
        <item name="android:editTextColor">@color/matrix_text_color</item>
        <item name="android:textColorHint">@color/matrix_text_color</item>
    </style>

    <!--  The light theme: Aether -->
    <style name="Aether" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/aether_color_accent</item>
        <item name="colorPrimary">@color/aether_color_accent</item>
        <item name="colorAccent">@color/aether_color_accent</item>
        <item name="android:textColor">@color/aether_text_color</item>
        <item name="android:windowBackground">@color/aether_color_primary</item>
        <item name="android:buttonTint">@color/aether_text_color</item>
        <item name="android:textColorHint">@color/aether_text_color</item>
        <item name="android:editTextColor">@color/aether_text_color</item>
    </style>

</resources>