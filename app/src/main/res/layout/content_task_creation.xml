<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TaskCreation"
    tools:showIn="@layout/activity_task_creation">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/task_name_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linear_layout_element_spacing"
            android:ems="10"
            android:hint="@string/new_task_name_entry"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/date_entry"
            android:onClick="modifyDate"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linear_layout_element_spacing"
            android:ems="10"
            android:hint="@string/new_task_date_entry"
            android:inputType="date" />

        <EditText
            android:id="@+id/time_entry"
            android:onClick="modifyTime"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linear_layout_element_spacing"
            android:ems="10"
            android:hint="@string/new_task_time_entry"
            android:inputType="time" />

        <EditText
            android:id="@+id/details_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linear_layout_element_spacing"
            android:ems="10"
            android:hint="@string/new_task_details_entry"
            android:inputType="textPersonName" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>